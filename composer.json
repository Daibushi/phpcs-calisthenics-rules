{
    "name": "object-calisthenics/phpcs-calisthenics-rules",
    "description": "PHP CodeSniffer Object Calisthenics rules/sniffs",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "squizlabs/php_codesniffer": "3.0.0RC4 as 2.8.1",
        "nette/utils": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "friendsofphp/php-cs-fixer": "^2.2",
        "phpstan/phpstan": "^0.6",
        "tracy/tracy": "^2.4",
        "slevomat/coding-standard": "^2.0",
        "symplify/easy-coding-standard": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "ObjectCalisthenics\\": "src/ObjectCalisthenics"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ObjectCalisthenics\\Tests\\": "tests",
            "PHP_CodeSniffer\\": "vendor/squizlabs/php_codesniffer/src"
        }
    },
    "scripts": {
        "complete-check": ["@phpstan", "@check-ecs", "phpunit"],
        "phpstan": "phpstan analyze src --level 5",
        "check-cs": "vendor/bin/easy-coding-standard check src tests",
        "fix-cs": "vendor/bin/easy-coding-standard check src tests --fix"
    }
}
