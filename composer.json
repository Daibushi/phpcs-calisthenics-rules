{
    "name": "object-calisthenics/phpcs-calisthenics-rules",
    "description": "PHP CodeSniffer Object Calisthenics rules/sniffs",
    "license": "MIT",
    "require": {
        "php": "^7.0",
        "squizlabs/php_codesniffer": "^2.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "friendsofphp/php-cs-fixer": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "ObjectCalisthenics\\": "src/ObjectCalisthenics"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ObjectCalisthenics\\Tests\\": "tests"
        }
    },
    "scripts": {
        "check-cs": [
            "vendor/bin/php-cs-fixer fix src --diff --dry-run -v --rules=@Symfony --allow-risky yes",
            "vendor/bin/php-cs-fixer fix tests --diff --dry-run -v --rules=@Symfony --allow-risky yes",
            "vendor/bin/phpcs src tests --colors -p -s --extensions=php --standard=src/ObjectCalisthenics/ruleset.xml"
        ],
        "fix-cs": [
            "vendor/bin/php-cs-fixer fix src -v --rules=@Symfony --allow-risky yes",
            "vendor/bin/php-cs-fixer fix tests -v --rules=@Symfony --allow-risky yes",
            "vendor/bin/phpcs src tests --colors -p -s --extensions=php --standard=src/ObjectCalisthenics/ruleset.xml"
        ]
    }
}
